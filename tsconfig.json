  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "@environment": ["./environment/index.ts"],
      "@shared": ["./src/app/shared/index.ts"],
      "@shared/authentication": ["./src/app/shared/authentication/index.ts"],
      "@domains/members": ["./src/app/domains/members/index.ts"],
      "@domains/members/models": ["./src/app/domains/members/models/index.ts"],
      "@domains/members/features": ["./src/app/domains/members/features/index.ts"],
      "@domains/members/services": ["./src/app/domains/members/services/index.ts"],
      "@domains/members/infrastructure": ["./src/app/domains/members/infrastructure/index.ts"],
      "@domains/members/ui": ["./src/app/domains/members/ui/index.ts"],
      "@domains/members/shared": ["./src/app/domains/members/shared/index.ts"],
      "@domains/members/API": ["./src/app/domains/members/API.ts"],
      "@domains/exercises": ["./src/app/domains/exercises/index.ts"],
      "@domains/exercises/models": ["./src/app/domains/exercises/models/index.ts"],
      "@domains/exercises/features": ["./src/app/domains/exercises/features/index.ts"],
      "@domains/exercises/services": ["./src/app/domains/exercises/services/index.ts"],
      "@domains/exercises/infrastructure": ["./src/app/domains/exercises/infrastructure/index.ts"],
      "@domains/exercises/shared": ["./src/app/domains/exercises/shared/index.ts"],
      "@domains/exercises/API": ["./src/app/domains/exercises/API.ts"],
      "@domains/daily": ["./src/app/domains/daily/index.ts"],
      "@domains/daily/models": ["./src/app/domains/daily/models/index.ts"],
      "@domains/daily/features": ["./src/app/domains/daily/features/index.ts"],
      "@domains/daily/services": ["./src/app/domains/daily/services/index.ts"],
      "@domains/daily/infrastructure": ["./src/app/domains/daily/infrastructure/index.ts"],
      "@domains/daily/API": ["./src/app/domains/daily/API.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
